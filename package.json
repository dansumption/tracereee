  "devDependencies": {
    "eslint": "^4.19.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "lint-staged": "^7.0.0",
    "prettify": "^0.1.7",
    "tape": "^4.9.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
